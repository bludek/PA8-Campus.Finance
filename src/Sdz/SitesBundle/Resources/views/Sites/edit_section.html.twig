{% block appbar %}
<form action="" method="POST" {{ form_enctype(form) }} >
    <div id="sites-create-site-buttons">
	<button type="submit" id="createBtn" class="inline-block jfk-button jfk-button-primary" tabindex="0" style="">Editer</button>
	<div role="button" id="cancelBtn" class="inline-block jfk-button jfk-button-standard" tabindex="0"><a href="">Annuler</a></div>
    </div>

{% endblock %}

{% block main %}

    <div class="content-wrapper" style="height: 700px; overflow-y: auto;">
        <div id="ws-createNewSite" style="background: #fff;">
            <div class="site-clear">
                {{ form_widget(form.contenu) }}
                {{ form_rest(form) }}
            </div>
        </div>
    </div>
</form>
